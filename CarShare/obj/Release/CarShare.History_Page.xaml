<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarShare.History_Page">
	<ContentPage.Content>
		<StackLayout>
			<Image Source="BackButton.png" WidthRequest="50" HeightRequest="50" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand">
				<Image.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped" />
				</Image.GestureRecognizers>
			</Image>
			<Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
				<Button Text="已預訂訂單" TextColor="Black" WidthRequest="100" HeightRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
				<Button Text="進行中訂單" TextColor="Black" WidthRequest="100" HeightRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			</Grid>
			<Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
				<Button Text="已完成訂單" TextColor="Black" WidthRequest="100" HeightRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
				<Button Text="已取消訂單" TextColor="Black" WidthRequest="100" HeightRequest="50" VerticalOptions="StartAndExpand" HorizontalOptions="EndAndExpand" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			</Grid>
			<Image Source="Bell.png" WidthRequest="200" HeightRequest="200" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
				<Image.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped" />
				</Image.GestureRecognizers>
			</Image>
			<Label Text="您還沒完成第一筆訂單，快來挑選吧：)" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Font="18" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>