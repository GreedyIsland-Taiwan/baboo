<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CarShare.Customer_Page">
	<ContentPage.Content>
		<StackLayout>
			<Image Source="Evelyn Yu.png" WidthRequest="150" HeightRequest="150" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
				<Image.GestureRecognizers>
					<TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped" />
				</Image.GestureRecognizers>
			</Image>
			<Label Text="Evelyn Yu" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Font="24" />
			<Button Text="支付選項" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Clicked="Go_To_History_Button_Clicked" Text="訂單詳情" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="車輛收藏" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="聯繫我們" TextColor="Black" BorderWidth="10" BorderRadius="10" BorderColor="Black" />
			<Button Text="享卡出行服務條款" TextColor="Black" />
			<Button Clicked="Switch_To_Car_Owner_Mode_Button_Clicked" Text="切換為車主模式" TextColor="Black" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>